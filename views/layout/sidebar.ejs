              <h2>Admin Dashboard</h2>
              <ul>
                  <li><a href="#"><i class="fas fa-home"></i>Home</a></li>
                  <li><a href="#"><i class="fas fa-address-card"></i>All tenders </a></li>
                  <li><a href="#"><i class="fas fa-address-card"></i>Active tenders</a></li>
                  <li><a href="#"><i class="fas fa-project-diagram"></i>Expired tenders</a></li>
                  <li><a href="#"><i class="fas fa-project-diagram"></i>Applied tenders</a></li>
                  <li><a href="#"><i class="fas fa-user"></i>Add User</a></li>
                  <li><a href="#"><i class="fas fa-address-card"></i>Logout</a></li>
              </ul>
          </div>
      </div>

      <div class="header">

         <div class="search">
          <form  class="searchTerm" method="POST" action="/searchtenders">
            <input type="text" placeholder="Search City.." name="search">
