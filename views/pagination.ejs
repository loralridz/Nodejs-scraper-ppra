<!-- Adding header snippet -->
<%- include('./layout/header.ejs') %>
    <%- include('./layout/navbar.ejs') %>
        <br>
        <br>

        <div id="tt" class="table">
            <table id="t" class="tender-table" text-align="center">
                <thead>
                    <tr class="head">
                        <th>No</th>
                        <th>Details</th>
                        <th>Advertise</th>
                        <th>Closing</th>
                        <th>Document</th>
                        <th>Apply</th>
                    </tr>

                </thead>

                <tbody>

                    <%result.forEach(t=>{%>
                        <tr>
                            <td>
                                <%=t.no%>
                            </td>
                            <td>
                                <%=t.detail%>
                            </td>
                                <td>
                                    <%=t.advertise_date%>
                                </td>
                                <td>
                                    <%=t.closing_date%>
                                </td>
                                <td>
                                    <%=t.document%>
                                </td>
                                <td>
                                    <form action="/apply" method="POST">
                                        <button type="submit" name="namet" value="<%= t.no %>">Apply</button>

                                    </form>
                                </td>
                        </tr>
                        <%});%>
                </tbody>
            </table>
        </div>

        </body>

        </html>

        <!-- Adding footer snippet -->
        <%- include('./layout/footer.ejs') %>
